{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KiraPilot",
  "version": "0.0.23",
  "identifier": "com.vietanhdev.kirapilot",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "KiraPilot - AI-Powered Productivity",
        "width": 1200,
        "height": 800,
        "minWidth": 380,
        "minHeight": 400,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "fullscreen": false,
        "focus": true,
        "visible": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:kirapilot.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "msi", "nsis", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "AI-powered productivity application",
    "longDescription": "KiraPilot is a cross-platform productivity application that combines task management, time tracking, and focus tools with an intelligent AI assistant named Kira.",
    "copyright": "Copyright Â© 2025 Viet-Anh Nguyen. All rights reserved.",
    "licenseFile": "../LICENSE",
    "homepage": "https://github.com/vietanhdev/KiraPilot",
    "publisher": "Viet-Anh Nguyen",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "allowDowngrades": true,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "office",
        "priority": "optional"
      }
    }
  }
}
